#include<stdio.h>
int main(){
int sum = 0;
float avgtat,avgwt;
int bt[20],tat[20],wt[20],i,n,p[20],temp,ct[20],total = 0;
printf("enter no of processes : ");
scanf("%d",&n);
printf("enter burst times : \n");
for(i=0;i < n;i++){
scanf("%d",&bt[i]);
// p[i] += 1;
}
for(i=0;i < n;i++){
for(int j=0;j<n-i-1;j++){
if(bt[j] > bt[j+1]){
temp = bt[j];
bt[j]=bt[j+1];
bt[j+1] = temp;
}
}
}
ct[-1]=0;
for(i=0;i<n;i++){
ct[i]=bt[i]+ct[i-1];
}
for(i=1;i<n;i++)
{
wt[i]=0;
for(int j=0;j<i;j++)
wt[i]+=bt[j];

total+=wt[i];
}
avgwt = (float)total/n;
for(i=0;i<n;i++){
tat[i] = bt[i]+wt[i];
sum += tat[i];
}
avgtat = (float)sum/n;
printf("PID  BT   CT   TAT    WT\n");
for(i=0;i<n;i++){
printf("p[%d]    %d    %d    %d   %d\n",i,bt[i],ct[i],tat[i],wt[i]);
}
printf("\nAVERAGE TURN AROUND TIME IS %f\nAVERAGE WAITING TIME IS %f\n",avgtat,avgwt);
return 0;
}
